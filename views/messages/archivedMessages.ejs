<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%- messages() %>

<!-- Account Error Display -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<!-- Archived Messages List -->
<div>
  <br>
  <%- messageList %>
  <br>
  <br>
  <a class="inbox-link" title="Inbox" href="/messages/">Return to Inbox</a>
</div>