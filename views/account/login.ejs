
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%- messages() %>

<!-- Login Error Display -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>


<!-- Login Form -->
<div class="form-box">
    <form action="/account/login" method="post">
        <div class="email">
            <label for="login_email">Email: </label>
            <input name="account_email" type="email" placeholder="youremail@email.com" 
            required value="asd@fakemail.com"
            > 
        </div>

        <div class="password">
            <label for="login_password">Password: </label>
            <input name="account_password" type="password" placeholder="Password" id="pass" 
            required value="asdasdasdasd2D!"
            > 
            
        </div>

        <button type="submit" class="form-btn">Login</button>

        <div class="register">
            <p>No account? </p>
            <a href="/account/register">Register here</a>
            
        </div>
    </form>

</div>