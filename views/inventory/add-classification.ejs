<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Display Messages -->
<%- messages()  %>

<!-- Add-Classification Error Display -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<!-- Classification Form -->
<div class="form-box">
    <form action="/inv/add-classification" method="post">

        <label for="classification_name">Classification Name: </label>
        <input name="add_classification" type="text" placeholder="Classification Name" 
            required 
            value="<%= locals.add_classification %>"
            pattern="[a-zA-Z]*" > 


        <button type="submit" class="form-btn">Add Classification</button>

        
    </form>

</div>